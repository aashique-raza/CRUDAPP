<%- include('./partials/header.ejs') %>

    <div class="container-fluid">
        <div class="row  p-4   h-100 d-flex justify-content-center align-items-center">
            <div class="col-lg-6">
                <h1 class="fs-3 text-light py-2 bg-primary px-2 w-50">ADD USER</h1>
                <form action="/add" method="post" enctype="multipart/form-data" class="bg-dark w-50 text-light px-2 py-3">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter your Name.."
                            name="name">

                    </div>
                    <div class="form-group mt-3">
                        <label for="exampleInputPassword1">Email</label>
                        <input type="email" class="form-control" id="exampleInputPassword1" name="email">
                    </div>

                    <div class="form-group mt-3">
                        <label for="exampleInputPassword1">Mobile</label>
                            <input type="tel" class="form-control" id="exampleInputPassword1" name="mobile">
                    </div>
                    <div class="form-group mt-3">
                        <label for="image">Select image</label>
                        <input type="file" class="form-control" id="exampleInputPassword1" name="image">
                    </div>


                    <button type="submit" class="btn btn-primary mt-3"  name="submit">Add user</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>