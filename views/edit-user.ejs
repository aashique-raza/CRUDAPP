<%- include('./partials/header.ejs') %>

    <div class="container-fluid">
        <div class="row  p-4   h-100 d-flex justify-content-center align-items-center">
            <div class="col-lg-6">
                <h1 class="fs-3 text-light py-2 bg-primary px-2 w-50">EDIT USER(<%= user[0].name %>)</h1>
                <form action="" method="post" enctype="multipart/form-data" class="bg-dark w-50 text-light px-2 py-3">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter your Name.."
                            name="name" value="<%= user[0].name %>">

                    </div>
                    <div class="form-group mt-3">
                        <label for="exampleInputPassword1">Email</label>
                        <input type="email" class="form-control" id="exampleInputPassword1" name="email" value="<%= user[0].email %>">
                    </div>

                    <div class="form-group mt-3">
                        <label for="exampleInputPassword1">Mobile</label>
                            <input type="tel" class="form-control" id="exampleInputPassword1" name="mobile" value="<%= user[0].mobile %>">
                    </div>
                    <div class="form-group mt-3">
                        <label for="image">Select image</label>
                        <input type="file" class="form-control" id="exampleInputPassword1" name="image">
                    </div>
                    <!-- <img src='<%= file %>' width="100px" height="100px" class="mt-3"> -->
                    <input type="hidden" name="oldimage" id="" value="<%= user[0].image %>">

                    <button type="submit" class="btn btn-primary mt-3 d-block"  name="submit">Edit user</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>